<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@+id/navigation_graph">
    <fragment
        android:id="@+id/navigation_graph"
        android:name="com.example.navigationtest.mainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/go_to_screen1"
            app:destination="@id/screen1Fragment" />
        <action
            android:id="@+id/go_to_screen2"
            app:destination="@id/screen2Fragment" />
    </fragment>
    <fragment
        android:id="@+id/screen1Fragment"
        android:name="com.example.navigationtest.Screen1Fragment"
        android:label="fragment_screen1"
        tools:layout="@layout/fragment_screen1" />
    <fragment
        android:id="@+id/screen2Fragment"
        android:name="com.example.navigationtest.Screen2Fragment"
        android:label="fragment_screen2"
        tools:layout="@layout/fragment_screen2" />
</navigation>